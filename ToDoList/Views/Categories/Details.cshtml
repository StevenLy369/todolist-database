@{
  Layout = "_Layout";
}

@model ToDoList.Models.Category

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Items.Count == 0)
{
  <p>This category has no items.</p>
}
else
{
  <h4>Categories the item belongs to:</h4>
  <ul>
  @foreach(var join in Model.Items)
  {
    <li>@join.Item.Description</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Item", "Edit", new { id = Model.CategoryId })</p>
<p>@Html.ActionLink("Add a category", "AddCategory", new {id = Model.CategoryId})</p>
<p>@Html.ActionLink("Delete Item", "Delete", new { id = Model.CategoryId})</p>